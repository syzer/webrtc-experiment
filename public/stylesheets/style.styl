html, body, form
  height 100%

div
  border 1px solid black
  position absolute

div.left
  width 80%
  height 100%
  left 0
  top 0

div.right
  width 20%
  height 100%
  left 80%
  top 0
  background-color #ADFF2F


  ul
    list-style-type none
    padding 1em
    margin 0

div.log
  position absolute
  top 0
  width 100%
  height calc(100% - 30px)

  p
    margin 1em

    .user
      padding-right 1em

    time
      float right


div.input
  position absolute
  bottom 0
  width 100%

  input
    width 80%
